<% include ../partials/header %>
<div class = "container">
	<div class = "row">
		<h1 style="text-align: center">Update Review</h1>
		<h4 style = "text-align: center">5 - Amazing, 4 - Very Good, 3 - Average, 2 - Not Good, 1 - Terrible</h4>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="rating">Leave a rating:</label>
					<fieldset class="starability-basic form-group" id="rating">
						<% for(var i=5;i>0;i--){ %>
							<div>
								<input type="radio" id="rating-<%= i %>" name="review[rating]" value=<%= i %>/>
								<label for="rating-<%= i %>">
                            		<%- '<span class="fa fa-star checked"></span>'.repeat(i) %>
                        		</label>
							</div>
						<% } %>
					</fieldset>
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this campground..." rows="5"><%= review.text %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit a Review</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground_id %>">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>